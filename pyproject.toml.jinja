[project]
name = "{{ project_name }}"
version = "{{ version }}"
description = "{{ project_description }}"
readme = "README.md"
requires-python = ">={{ python_version }}"
classifiers = [
  "Programming Language :: Python :: 3 :: Only",
  "Programming Language :: Python :: 3.12",
  "Programming Language :: Python :: 3.13",
]
dependencies = [  ]

[dependency-groups]
dev = [
  "ipykernel>=6.29.5",
  "ipywidgets>=8.1.7",
  "pre-commit>=4.1",
  "pytest>=8.3.5",
  "ruff>=0.9.5",
]

[tool.ruff]
line-length = 120

format.docstring-code-format = true
lint.extend-select = [
  "ANN",
  "B",
  "FA",
  "I",
  "NPY",
  "PERF",
  "PTH",
  "RUF",
  "SIM",
  "UP",
]
lint.ignore = [
  "ANN003", # Missing type annotation for **kwargs
]
lint.pydocstyle.convention = "google"

[tool.pyright]
venvPath = "."
venv = ".venv"
